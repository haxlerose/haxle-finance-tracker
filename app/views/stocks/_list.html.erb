<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <th>Daily Change</th>
      <% if @user.id == current_user %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.last_price %></td>
        <td><% daily_stock_change_path(user_stock) %>
          <%# user_stock_daily_change_path(user_stock, controller: "user_stocks", method: "daily_change") %>
            <%= @daily_change_amount.inspect %></td>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Delete this stock", user_stock_path(user_stock),
                  method: :delete, data: {confirm: "Are you sure?"},
                  class: "btn btn-xs btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
